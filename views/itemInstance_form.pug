extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='item') Item:
      select#item.form-control(type='select', placeholder='Select item' name='item' required='true' )
        for item in items
          option(value=item._id, selected=(selected_item==item._id.toString() ? 'selected' : false) ) #{item.name}
        
    div.form-group
      label(for='quantity') Quantity:
      input#quantity.form-control(type='number', name='quantity' required='true' value=(undefined===bookinstance ? 1 : bookinstance.quantity) min=1)

    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg