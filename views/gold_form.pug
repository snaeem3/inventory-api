extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    h2 Current Quantity: #{gold.quantity}
    div.form-group
      label(for='quantity') New Quantity:
      input#quantity.form-control(type='number', placeholder='100' name='quantity' min='0' step='1' value=(undefined===gold ? '' : gold.quantity), required='true')
    div.form-group
      label(for='transactionNote') Transaction Note:
      textarea#transactionNote.form-control(type='textarea', placeholder='Purchased a flying carpet' name='transactionNote' required='false' maxLength="50")
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
