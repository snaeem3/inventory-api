extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='quantity') New Quantity:
      input#quantity.form-control(type='number', placeholder='100' name='name' min='0' step='1' value=(undefined===gold ? '' : gold.quantity), required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
