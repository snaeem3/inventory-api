extends layout

block content
  h1 Name: #{item.name}

  p #[strong Summary:] #{item.description}
  p #[strong Category: ]
    each val, index in item.category
      a(href=val.url) #{val.name}
      if index < item.category.length - 1
        |, 
  p #[strong Quantity: ] #{item.quantity}
  p #[strong Value] (gold): #{item.value}
  p #[strong Rarity: ] #{item.rarity}
  hr
  p
    a(href=item.url+'/delete') Delete item
  p 
    a(href=item.url+'/update') Update item
